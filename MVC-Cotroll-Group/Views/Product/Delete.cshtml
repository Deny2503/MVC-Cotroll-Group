@model MVC_Cotroll_Group.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="max-w-xl mx-auto mt-16 bg-white p-8 rounded-2xl shadow-xl border border-gray-100">
    <h1 class="text-3xl font-bold text-red-600 mb-6 text-center">Delete Product</h1>

    <p class="text-gray-700 mb-4 text-center">
        Are you sure you want to delete <strong>@Model.Name</strong>?
    </p>

    <form asp-action="Delete" method="post" class="flex justify-center space-x-4 mt-6">
        <input type="hidden" asp-for="Id" />
        <a href="@Url.Action("Index", "Product")" class="px-5 py-2.5 rounded-xl bg-gray-100 text-gray-700 hover:bg-gray-200 active:bg-gray-300 transition">Cancel</a>
        <button type="submit" class="px-5 py-2.5 rounded-xl bg-red-600 text-white font-semibold hover:bg-red-700 transition"
                asp-controller="Product" asp-action="DeleteConfirmed">
            Delete
        </button>
    </form>
</div>
