@model IEnumerable<MVC_Cotroll_Group.Models.Category>

@{
    ViewData["Title"] = "Home";
    var categories = ViewData["Categories"] as IEnumerable<MVC_Cotroll_Group.Models.Category>;
}

<div class="bg-gray-100 p-6 rounded-lg shadow-md text-center">
    <h1 class="text-3xl font-bold mb-2 text-gray-800">Welcome to Our MVC Product Store!</h1>
    <p class="text-gray-600 text-lg">
        This project was created as part of a <strong>group collaboration</strong> to demonstrate
        our skills in <span class="text-blue-600 font-semibold">ASP.NET + TAILWIND CSS</span> and
        <span class="text-blue-600 font-semibold">Entity Framework Core</span>.
    </p>
    <p class="text-gray-500 mt-2 italic">
        Feel free to explore, add, and manage products — everything is fully dynamic!
    </p>
</div>

<div class="max-w-6xl mx-auto mt-10 bg-white shadow-md rounded-lg p-4">

    <form asp-controller="Product" asp-action="Index" method="get" class="flex flex-wrap items-center gap-4">

        <div>
            <label class="block text-sm font-medium mb-1">Category</label>
            <select name="category"
                    class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">All</option>
                @if (categories != null)
                {
                    foreach (var c in categories)
                    {
                        <option value="@c.Name">@c.Name</option>
                    }
                }
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Name</label>
            <input type="text" name="name" placeholder="Product name..."
                   class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 w-40" />
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Rating</label>
            <select name="rating"
                    class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Any</option>
                <option value="1">⭐ 1+</option>
                <option value="2">⭐ 2+</option>
                <option value="3">⭐ 3+</option>
                <option value="4">⭐ 4+</option>
                <option value="5">⭐ 5</option>
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Sort by</label>
            <select name="sortOrder"
                    class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Default</option>
                <option value="price_asc">Price ↑</option>
                <option value="price_desc">Price ↓</option>
                <option value="rating_asc">Rating ↑</option>
                <option value="rating_desc">Rating ↓</option>
                <option value="name_asc">Name A–Z</option>
                <option value="name_desc">Name Z–A</option>
            </select>
        </div>

        <div class="pt-5">
            <button type="submit"
                    class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                🔍 Search
            </button>
        </div>
    </form>
</div>
