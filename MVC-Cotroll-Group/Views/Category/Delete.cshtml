@model MVC_Cotroll_Group.Models.Category
@{
    ViewData["Title"] = "Видалити категорію";
}

<div class="flex justify-center items-start mt-16">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md text-center">
        <h2 class="text-2xl font-extrabold text-red-600 mb-4">Видалити категорію</h2>
        <p class="text-gray-700 mb-6">
            Ви впевнені, що хочете видалити категорію
            <strong class="text-gray-900">@Model.Name</strong>?
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="flex justify-center gap-3">
                <a asp-action="Index"
                   class="px-4 py-2 rounded-xl text-gray-700 hover:text-gray-900 border border-gray-300 transition">
                    Скасувати
                </a>
                <button type="submit"
                        class="bg-red-600 text-white font-medium px-4 py-2 rounded-xl hover:bg-red-700 transition">
                    Так, видалити
                </button>
            </div>
        </form>
    </div>
</div>
